@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="gym_contenido">
    <div class="gym_contenido_logeo">
        <div class="gym_zona_logeo">
            <div class="gym_titulo_logeo">BIENVENIDO A GYM HOUSE</div>
        <div>
            <p></p>
        <div class="gym_zona_logeo">
            <form id="account" method="post">
	        <table width="50%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                    <td class="gym_label_table">E_mail</td>
                    <td class="gym_zona_campo"><input asp-for="Input.Email" class="gym_campo_table" type="text" size="40px" maxlength="50"></td>
                </tr>
                <tr>
                    <td class="gym_label_table">Contraseña</td>
                    <td class="gym_zona_campo"><input asp-for="Input.Password" class="gym_campo_table" type="text" size="40px" maxlength="50"></td>
                </tr> 
                <tr>
                    <td colspan="2" style="text-align: center">
                        <a id="forgot-password" asp-page="./ForgotPassword">¿Olvido su contraseña?</a>
                    </td>
                </tr>
                <tr>
                    <td style="width: 50%;">
                        <input type="submit" class="gym_boton" value="Ingresar"></td>
                    <td style="width: 50%;">
                        <a class="gym_boton" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Regístrate</a>
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="text-align: center"><p></p></td>
                </tr>
            </table>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
