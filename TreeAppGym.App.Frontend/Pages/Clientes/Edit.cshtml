@page
@model TreeAppGym.App.Frontend.Pages.EditModel
@{
}
<div class="gym_contenido">
    
        <div class="gym_contenido_registro">

            <div class="gym_formulario">

                <div class="gym_textoEncabezado">Hola @Model.Cliente.Nombres @Model.Cliente.Apellidos, acá puedes 
                    actualizar tus datos <br>(Los campos con * son obligatorios)<p><p><p></div>

                <div>
                    <form method="post">
                        <input type="hidden" asp-for="Cliente.Id" />
                        <div class="gym_espacio_campos">
                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tbody>
                                    <tr>
                                        <td class="gym_label_table">Nombre*</td><td class="gym_zona_campo"><input asp-for="Cliente.Nombres" class="gym_campo_table" type="text" size="40px" maxlength="50">
                                        <span class="text-danger" asp-validation-for="Cliente.Nombres"></span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="gym_label_table">Apellidos*</td><td class="gym_zona_campo"><input  asp-for="Cliente.Apellidos" class="gym_campo_table" type="text" size="40px" maxlength="50"></td>
                                    </tr>
                                    <tr>
                                        <td class="gym_label_table">Genero*</td><td class="gym_zona_campo"><input  asp-for="Cliente.Genero" class="gym_campo_table" type="text">
                                    </tr>
                                    <tr>
                                        <td class="gym_label_table">Edad*</td><td class="gym_zona_campo"><input  asp-for="Cliente.Edad" class="gym_campo_table" type="text" size="15px" maxlength="3"></td>
                                    </tr>
                                    <tr>
                                        <td class="gym_label_table">Dirección</td><td class="gym_zona_campo"><input  asp-for="Cliente.Direccion" class="gym_campo_table" type="text" size="40px" maxlength="50"></td>
                                    </tr>
                                    <tr>
                                        <td class="gym_label_table">Celular</td><td class="gym_zona_campo"><input  asp-for="Cliente.Telefono" class="gym_campo_table" type="text" size="20px" maxlength="20"></td>
                                    </tr>
                                    <tr>
                                        <td class="gym_label_table"></td><td class="gym_zona_campo"><p></p></td>
                                    </tr>

                                    <tr>
                                        <td class="gym_label_table"></td><td class="gym_zona_campo"><input type="submit" class="gym_boton" value="Actualizar"></td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>

                    </form>
                </div>

            </div>
        </div>
    
</div>